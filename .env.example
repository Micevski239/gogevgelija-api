# Django Core Settings
DJANGO_DEBUG=0
DJANGO_SECRET_KEY=your-secret-key-here-generate-64-random-characters
DJANGO_ADMIN_ENABLED=0

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=admin.gogevgelija.com,gogevgelija.com,api.gogevgelija.com
CSRF_TRUSTED_ORIGINS=https://admin.gogevgelija.com,https://gogevgelija.com

# CORS Settings
CORS_ALLOW_ALL_ORIGINS=0
CORS_ALLOWED_ORIGINS=https://admin.gogevgelija.com,https://gogevgelija.com

# HTTPS Settings (Production)
DJANGO_SECURE_SSL_REDIRECT=1
DJANGO_SECURE_HSTS_SECONDS=31536000
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=1
DJANGO_SECURE_HSTS_PRELOAD=1

# Database
DATABASE_URL=postgres://user:password@host:5432/dbname

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=15
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7
JWT_ROTATE_REFRESH_TOKENS=1
JWT_BLACKLIST_AFTER_ROTATION=1

# Email Settings
EMAIL_BACKEND=core.email_backend.ResendEmailBackend
RESEND_API_KEY=re_your_resend_api_key_here
DEFAULT_FROM_EMAIL=GoGevgelija <no-reply@gogevgelija.com>
SERVER_EMAIL=GoGevgelija <no-reply@gogevgelija.com>
ADMIN_EMAIL=admin@gogevgelija.com

# Storage (DigitalOcean Spaces)
USE_SPACES=1
AWS_ACCESS_KEY_ID=your_do_spaces_key
AWS_SECRET_ACCESS_KEY=your_do_spaces_secret
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=nyc3
AWS_S3_ENDPOINT_URL=https://nyc3.digitaloceanspaces.com
AWS_S3_CUSTOM_DOMAIN=your-bucket-name.nyc3.cdn.digitaloceanspaces.com

# Health Check
HEALTH_CHECK_ENABLED=1
